@page "/pggm-fieldset"
@using Blazor.Pggm.Components

<PageTitle>PGGM Fieldset Demo</PageTitle>

<h1>PGGM Fieldset Component Demo</h1>

<div class="demo-section">
    <h3>Basic Fieldset with Label, Description and Error Messages</h3>
    
    <PggmFieldset>
        <Label>
            <PggmLabel For="TextInput1">Naam</PggmLabel>
        </Label>
        <Description>
            <p>Vul uw naam in.</p>
        </Description>
        <Error>
            <PggmErrorMessage slot="error" For="TextInput1" Validity="valueMissing">
                Naam is een verplicht veld. Vul uw naam in.
            </PggmErrorMessage>
            <PggmErrorMessage slot="error" For="TextInput1" Validity="tooShort">
                De naam is te kort. De naam moet tenminste 2 tekens lang zijn. Vul uw naam in.
            </PggmErrorMessage>
        </Error>
        <ChildContent>
            <PggmInput Type="text" id="TextInput1" Required="true" MinLength="2" />
        </ChildContent>
    </PggmFieldset>
</div>

<div class="demo-section">
    <h3>Simple Fieldset with Only Label</h3>
    
    <PggmFieldset>
        <Label>
            <PggmLabel For="TextInput2">Email</PggmLabel>
        </Label>
        <ChildContent>
            <PggmInput Type="email" id="TextInput2" />
        </ChildContent>
    </PggmFieldset>
</div>

<div class="demo-section">
    <h3>Fieldset with Description Only</h3>
    
    <PggmFieldset>
        <Description>
            <p>Vul een geldig telefoonnummer in (optioneel).</p>
        </Description>
        <ChildContent>
            <PggmInput Type="tel" id="TextInput3" Placeholder="06-12345678" />
        </ChildContent>
    </PggmFieldset>
</div>

