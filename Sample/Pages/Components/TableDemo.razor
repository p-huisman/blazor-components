<PggmHeader Level="2">Multi-Select Table</PggmHeader>
<p>This table allows multiple row selection.</p>

<PggmTable 
  FilterLabel="Filter projects" 
  ClearLabel="Clear filters" 
  Lang="nl" 
  IdField="projectId" 
  Selectable="true" 
  SelectType="multiple"
  Data="@projectData">
  
  <PggmTh 
    Sortable="true" 
    Filterable="true" 
    Field="projectName" 
    Width="200" 
    Type="string" 
    Format="string">
    Project Name
  </PggmTh>
  
  <PggmTh 
    Filterable="true" 
    Field="client" 
    Width="150" 
    Type="string" 
    Format="string">
    Client
  </PggmTh>
  
  <PggmTh 
    Sortable="true" 
    Format="date" 
    TextAlign="center" 
    Type="date" 
    Field="startDate" 
    Width="120">
    Start Date
  </PggmTh>
  
  <PggmTh 
    Sortable="true" 
    Format="date" 
    TextAlign="center" 
    Type="date" 
    Field="endDate" 
    Width="120">
    End Date
  </PggmTh>
  
  <PggmTh 
    TextAlign="right" 
    Sortable="true" 
    Format="currency" 
    Type="number" 
    Field="budget" 
    Width="auto">
    Budget
  </PggmTh>
  
  <PggmTh 
    Filterable="true" 
    Field="status" 
    Width="100" 
    Type="string" 
    Format="string">
    Status
  </PggmTh>
  
</PggmTable>

