@page "/pggm-table"
@using Pggm.Components

<PageTitle>Advanced Table Example</PageTitle>

<PggmHeader Level="1">Advanced PGGM Table Examples</PggmHeader>

<PggmHeader Level="2">Local Data Table</PggmHeader>
<p>This table uses local data with sorting, filtering, and single selection.</p>

<PggmTable 
  FilterLabel="Filter instellen" 
  ClearLabel="Filter wissen" 
  Lang="nl" 
  IdField="id" 
  Selectable="true" 
  SelectType="single"
  Data="@employeeData">
  
  <PggmTh 
    Sortable="true" 
    Filterable="true" 
    Field="firstName" 
    Width="150" 
    Type="string" 
    Format="string">
    First Name
  </PggmTh>
  
  <PggmTh 
    Sortable="true" 
    Filterable="true" 
    Field="lastName" 
    Width="150" 
    Type="string" 
    Format="string">
    Last Name
  </PggmTh>
  
  <PggmTh 
    Filterable="true" 
    Field="department" 
    Width="200" 
    Type="string" 
    Format="string">
    Department
  </PggmTh>
  
  <PggmTh 
    Sortable="true" 
    Format="date" 
    TextAlign="center" 
    Type="date" 
    Field="hireDate" 
    Width="auto">
    Hire Date
  </PggmTh>
  
  <PggmTh 
    TextAlign="right" 
    Sortable="true" 
    Format="currency" 
    Type="number" 
    Field="salary" 
    Width="auto">
    Annual Salary
  </PggmTh>
  
  <PggmTh 
    TextAlign="center" 
    Sortable="true" 
    Field="isActive" 
    Width="100" 
    Type="boolean" 
    Format="boolean">
    Active
  </PggmTh>
  
</PggmTable>

