<PggmHeader Level="2">Remote Data Table simple</PggmHeader>
<p>This table would fetch data from a remote endpoint.</p>

 
<!-- Simple remote mode example -->
<PggmHeader Level="3">Simple Remote Mode</PggmHeader>
<PggmTable 
  RemoteUrl="https://jsonplaceholder.typicode.com/users" 
  Remote="simple"
  FilterLabel="Filter users" 
  ClearLabel="Clear filters" 
  Lang="en" 
  IdField="id" 
  Selectable="true" 
  SelectType="multiple">
  
  <PggmTh Field="name" Type="string" Sortable="true" Filterable="true" Width="200">
    Name
  </PggmTh>
  
  <PggmTh Field="email" Type="string" Filterable="true" Width="250">
    Email
  </PggmTh>
  
  <PggmTh Field="address.city" Type="string" Filterable="true" Width="150">
    City
  </PggmTh>
  
  <PggmTh Field="company.name" Type="string" Filterable="true" Width="200">
    Company
  </PggmTh>
  
</PggmTable>



