
@page "/pggm-tabs"

<PageTitle>Tabs</PageTitle>

<PggmHeader Level="1">PGGM Tabs</PggmHeader>

<PggmHeader Level="2">Basic Tabs</PggmHeader>
<PggmTab OnTabChange="OnTabChanged">
  <PggmTabPanel Title="Tab 1" Active="true">
    <PggmHeader Level="3">Content for Tab 1</PggmHeader>
    <p>This is the content for the first tab. It can contain any HTML or Blazor components.</p>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Tab 2">
    <PggmHeader Level="3">Content for Tab 2</PggmHeader>
    <p>This is the content for the second tab with different information.</p>
    <ul>
      <li>List item 1</li>
      <li>List item 2</li>
      <li>List item 3</li>
    </ul>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Tab 3">
    <PggmHeader Level="3">Content for Tab 3</PggmHeader>
    <p>The third tab contains yet another set of content.</p>
    <button class="btn btn-primary">Sample Button</button>
  </PggmTabPanel>
</PggmTab>

<PggmHeader Level="2">Multiple Tab Example</PggmHeader>
<PggmTab OnTabChange="OnMultipleTabChanged">
  <PggmTabPanel Title="First Tab" Active="true">
    <p>Content for the first tab.</p>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Second Tab">
    <p>Content for the second tab.</p>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Third Tab">
    <p>Content for the third tab.</p>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Fourth Tab">
    <p>Content for the fourth tab.</p>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Fifth Tab">
    <p>Content for the fifth tab.</p>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Sixth Tab">
    <p>Content for the sixth tab.</p>
  </PggmTabPanel>
</PggmTab>

<PggmHeader Level="2">Another Tab Example</PggmHeader>
<PggmTab OnTabChange="OnAnotherTabChanged">
  <PggmTabPanel Title="Example 1" Active="true">
    <p>Example tab content 1.</p>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Example 2">
    <p>Example tab content 2.</p>
  </PggmTabPanel>
</PggmTab>

<PggmHeader Level="2">Tab Demo with Panels</PggmHeader>
<PggmTab OnTabChange="OnDemoTabChanged">
  <PggmTabPanel Title="Demo Tab 1" Active="true">
    <p>This is a demo tab with content.</p>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Demo Tab 2">
    <p>This is another demo tab.</p>
  </PggmTabPanel>
  
  <PggmTabPanel Title="Demo Tab 3">
    <p>This is the third demo tab.</p>
  </PggmTabPanel>
</PggmTab>

@* <PggmHeader Level="2">Event Information</PggmHeader>
<div class="alert alert-info">
  <PggmHeader Level="4">Tab Events</PggmHeader>
  <p><strong>Last Basic Tab Changed:</strong> @lastBasicTabIndex</p>
  <p><strong>Last Multiple Tab Changed:</strong> @lastMultipleTabIndex</p>
  <p><strong>Last Another Tab Changed:</strong> @lastAnotherTabIndex</p>
  <p><strong>Last Demo Tab Changed:</strong> @lastDemoTabIndex</p>
</div> *@

@code {
  private int lastBasicTabIndex = 0;
  private int lastMultipleTabIndex = 0;
  private int lastAnotherTabIndex = 0;
  private int lastDemoTabIndex = 0;

  private void OnTabChanged(int tabIndex)
  {
    lastBasicTabIndex = tabIndex;
    StateHasChanged();
  }

  private void OnMultipleTabChanged(int tabIndex)
  {
    lastMultipleTabIndex = tabIndex;
    StateHasChanged();
  }

  private void OnAnotherTabChanged(int tabIndex)
  {
    lastAnotherTabIndex = tabIndex;
    StateHasChanged();
  }

  private void OnDemoTabChanged(int tabIndex)
  {
    lastDemoTabIndex = tabIndex;
    StateHasChanged();
  }
}
