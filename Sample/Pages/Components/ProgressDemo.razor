@page "/pggm-progress-indicator"

<PageTitle>PGGM Progress Indicator</PageTitle>

<PggmHeader Level="1">PGGM Progress Indicator</PggmHeader>

<p>This page demonstrates the PGGM Progress Indicator and Progress Step components.</p>

<div style="margin-bottom: 2rem;">
    <PggmHeader Level="2">Progress Indicator Example</PggmHeader>
    <PggmProgressIndicator>
        <PggmProgressStep Completed="true">
            <div>Step 1: Personal Info</div>
        </PggmProgressStep>
        <PggmProgressStep Current="true">
            <div>Step 2: Address</div>
        </PggmProgressStep>
        <PggmProgressStep>
            <div>Step 3: Confirmation</div>
        </PggmProgressStep>
    </PggmProgressIndicator>
</div>

<div style="margin-bottom: 2rem;">
    <PggmHeader Level="2">Interactive Progress</PggmHeader>
    <PggmProgressIndicator>
        <PggmProgressStep Completed="@(currentStep > 0)" Current="@(currentStep == 0)">
            <div>Start</div>
        </PggmProgressStep>
        <PggmProgressStep Completed="@(currentStep > 1)" Current="@(currentStep == 1)">
            <div>In Progress</div>
        </PggmProgressStep>
        <PggmProgressStep Completed="@(currentStep > 2)" Current="@(currentStep == 2)">
            <div>Almost Done</div>
        </PggmProgressStep>
        <PggmProgressStep Completed="@(currentStep > 3)" Current="@(currentStep == 3)">
            <div>Complete</div>
        </PggmProgressStep>
    </PggmProgressIndicator>
    
    <div style="margin-top: 1rem;">
        <button class="btn btn-primary" @onclick="PreviousStep" disabled="@(currentStep == 0)">Previous</button>
        <button class="btn btn-primary" @onclick="NextStep" disabled="@(currentStep == 3)">Next</button>
        <button class="btn btn-secondary" @onclick="ResetProgress">Reset</button>
    </div>
</div>

@code {
    private int currentStep = 0;

    private void NextStep()
    {
        if (currentStep < 3)
        {
            currentStep++;
        }
    }

    private void PreviousStep()
    {
        if (currentStep > 0)
        {
            currentStep--;
        }
    }

    private void ResetProgress()
    {
        currentStep = 0;
    }
}
