@inherits PggmComponentBase
@namespace Blazor.Pggm.Components

<pggm-accordion @ref="ElementRef" @attributes="GetAttributes()">
  @ChildContent
</pggm-accordion>

@code {
  protected override string TagName => "pggm-accordion";

  /// <summary>
  /// Whether multiple accordion items can be open at the same time
  /// </summary>
  [Parameter] public bool AllowMultiple { get; set; }

  protected override void AddComponentAttributes(Dictionary<string, object> attributes)
  {
    AttributeHelper.SetBooleanAttribute(attributes, "allow-multiple", AllowMultiple);
  }
}